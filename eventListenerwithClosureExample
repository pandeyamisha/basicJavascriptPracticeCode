function eventListenerClosure(){
  let clickCount= 0;
document.getElementById('clickmeButton').addEventListener('click',function (){
  console.log("clicked")
  clickCount+=1;
  document.getElementById('clickCount').innerText=clickCount;
})
}
eventListenerClosure();
